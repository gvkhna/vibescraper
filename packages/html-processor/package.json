{
  "name": "@vibescraper/html-processor",
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "clean": "rimraf dist .turbo node_modules/.cache node_modules/.vite-temp *.tsbuildinfo",
    "dev": "vite build --watch",
    "run:html-cleaner": "bun run src/html-cleaner-run.ts",
    "run:html-format": "bun run src/html-format-run.ts",
    "run:html-markdown": "bun run src/html-markdown-run.ts",
    "run:html-readability": "bun run src/html-readability-run.ts",
    "test": "vitest run",
    "typecheck": "bun tsc --noEmit && bun eslint --quiet ."
  },
  "dependencies": {
    "cheerio": "1.0.0-rc.12",
    "domelementtype": "^2.3.0",
    "domhandler": "^5.0.3",
    "jsdom": "^26.1.0",
    "node-html-markdown": "^1.3.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "24.3.0"
  },
  "peerDependencies": {}
}
