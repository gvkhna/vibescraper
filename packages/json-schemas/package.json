{
  "name": "@vibescraper/json-schemas",
  "type": "module",
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "clean": "rimraf --glob dist .turbo node_modules/.cache node_modules/.vite* *.tsbuildinfo",
    "dev": "vite build --watch",
    "format": "bun eslint --quiet --config ../../eslint.config.mjs . --fix && bun prettier --write .",
    "lint": "bun eslint --config ../../eslint.config.mjs .",
    "test": "vitest run",
    "typecheck": "bun tsc --noEmit && bun eslint --quiet ."
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {},
  "peerDependencies": {
    "@types/node": "*",
    "vitest": "*"
  }
}
