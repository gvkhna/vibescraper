{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "libReplacement": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["DOM", "ESNext"],
    "types": []
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": ["dist", "node_modules", "src/**/_*.ts", "src/**/_*.tsx", "src/**/*tmp*.ts", "src/**/*tmp*.tsx"]
}
