{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "libReplacement": false,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["ESNext", "DOM"],
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
