{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "lib": ["ESNext", "DOM"],
    "libReplacement": false,
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]
  },
  "exclude": ["node_modules", "dist"],
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*"]
}
