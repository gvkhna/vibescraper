---
// import PixelHead from '@/partials/analytics/pixel-head.astro'
// import PixelBody from '@/partials/analytics/pixel-body.astro'
import { SEO, type Props as SEOProps } from 'astro-seo'
import { PUBLIC_VARS } from '@/vars.public'
import '@/global.css'
import { STRINGS } from '@/strings'
export interface Props {
  title: string
  description?: string
  shortDescription?: string
  seo?: SEOProps
}

const { title, description, shortDescription, seo } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    {/* <PixelHead /> */}
    <SEO
      charset='utf-8'
      {title}
      {description}
      openGraph={{
        basic: {
          title: title,
          type: 'website',
          image: `${PUBLIC_VARS.PUBLIC_HOSTNAME}/ogimage.jpg`,
          url: Astro.locals.canonical
        },
        optional: {
          ...(shortDescription
            ? {
                description: shortDescription
              }
            : {})
        }
      }}
      twitter={{
        card: 'summary_large_image',
        image: `${PUBLIC_VARS.PUBLIC_HOSTNAME}/ogimage.jpg`,
        // site: STRINGS.brand.usernames.twitter,
        // creator: STRINGS.brand.usernames.twitter,
        title: title,
        ...(shortDescription
          ? {
              description: shortDescription
            }
          : {})
      }}
      canonical={Astro.locals.canonical}
      extend={{
        link: [
          { rel: 'icon', href: '/favicon-96x96.png', type: 'image/png', sizes: '96x96' },
          { rel: 'icon', href: '/favicon.svg', type: 'image/svg+xml' },
          { rel: 'shortcut icon', href: '/favicon.ico' },
          { rel: 'apple-touch-icon', sizes: '180x180', href: '/apple-touch-icon.png' },
          { rel: 'manifest', href: '/site.webmanifest' },
          { rel: 'sitemap', href: '/sitemap-index.xml' }
        ],
        meta: [
          { name: 'apple-mobile-web-app-title', content: 'Vibescraper' },
          { name: 'viewport', content: 'width=device-width' }
        ]
      }}
      {...seo ?? {}}
    />
  </head>
  <body class='bg-white font-sans tracking-tight text-zinc-900 antialiased'>
    {/* <PixelBody /> */}
    <slot />
  </body>
</html>
