{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "libReplacement": false,
    "paths": {
      "@/*": ["src/*"]
    },
    "types": []
  },
  "include": [
    "types.d.ts",
    ".astro/types.d.ts",
    ".vite-plugins/*.ts",
    "astro.config.ts",
    "drizzle.config.ts",
    "src/**/*.astro",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/env.d.ts"
  ],
  "exclude": ["dist", "node_modules", "src/**/_*.ts", "src/**/_*.tsx", "src/**/*tmp*.ts", "src/**/*tmp*.tsx"]
}
